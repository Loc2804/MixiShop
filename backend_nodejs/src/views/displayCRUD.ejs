<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        text-align: center;
      }
      .btn-edit{
        background: orange;
        border: none;
        outline: none;
        height: 25px;
        width: 60px;
        margin : 5px;
        display: inline-block;
        text-decoration: none;
      }
      .btn-delete{
        background: rgb(231, 72, 72);
        border: none;
        outline: none;
        height: 25px;
        width: 60px;
        margin : 5px;
        display: inline-block;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <table style="width:100%">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i< dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a href="/edit-crud?id= <%= dataTable[i].id %>" type="button" class="btn-edit">Edit</a>
          <a href="/delete-crud?id= <%= dataTable[i].id %>" type="button" class="btn-delete">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
